{
  "name": "GithubTags",
  "version": "1.0.3",
  "description": "给Github项目添加标签",
  "manifest_version": 2,
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "GithubTags",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*"
      ],
      "css": [
        "styles/lib/element-ui.css",
        "styles/global.css",
        "styles/github/index.css"
      ],
      "js": [
        "javascript/lib/vue.js",
        "javascript/lib/element-ui.js",
        "javascript/github/tag.js",
        "javascript/github/list.js",
        "javascript/github/index.js"
      ],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "notifications"
  ],
  "web_accessible_resources": [
    "fonts/element-icons.woff",
    "fonts/element-icons.ttf"
  ],
  "content_security_policy": "script-src 'self' https://cdn.bootcss.com; object-src 'self'",
  "homepage_url": "https://github.com/dengyuhan/github-tags"
}
